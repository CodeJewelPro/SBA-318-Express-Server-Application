<!DOCTYPE html>
<html>
<head>
  <title> My Thoughts Express App </title>
  <link rel="stylesheet" type="text/css" href="/styles.css">
</head>
<body>
  <h1>Welcome to My Thoughts Express App</h1>
  <img src="/pexels-pixabay-267355.jpg" alt="like image" style="width:300px; height:200px;">
  
  <h2>Users</h2>
<img src="/10700313_MotionElements_minimalistic-professional-animated-pictogram-for-s-vimage.gif" alt="social media GIF" style="width:300px;height:200px;">
 <ul>
    <% users.forEach(user => { %>
      <li><%= user.name %> (<%= user.username %>) - <%= user.email %></li>
    <% }) %>
  </ul>
  <form action="/api/users" method="post">
    <input type="text" name="name" placeholder="Name" required>
    <input type="text" name="username" placeholder="Username" required>
    <input type="email" name="email" placeholder="Email" required>
    <button type="submit">Add User</button>
  </form>
</body>
</html>

